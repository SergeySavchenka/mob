<NotePasswordScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: 'Введите пароль для заметки'
            font_size: 24

        TextInput:
            id: password_input
            hint_text: 'Пароль'
            password: True
            multiline: False

        Button:
            text: 'Подтвердить'
            on_release:
                root.check_password()

        Button:
            text: 'Отмена'
            on_release:
                app.root.current = 'notes'
