<EditNoteScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: 'Редактирование заметки'
            font_size: 24

        TextInput:
            id: note_title
            hint_text: 'Заголовок'
            multiline: False

        TextInput:
            id: note_content
            hint_text: 'Содержание'
            multiline: True

        Button:
            text: 'Изменить пароль'
            on_release:
                root.change_password()

        CheckBox:
            id: is_public
            size_hint_y: None
            height: 50

        Label:
            text: 'Сделать заметку общей'

        Button:
            text: 'Сохранить'
            on_release:
                root.save_note()

        Button:
            text: 'Удалить'
            on_release:
                root.del_note()

        Button:
            text: 'Отмена'
            on_release:
                root.cancel_edit()
