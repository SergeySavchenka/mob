<UserPasswordScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: 'Смена пароля'
            font_size: 24

        TextInput:
            id: new_password
            hint_text: 'Новый пароль'
            password: True
            multiline: False

        TextInput:
            id: confirm_password
            hint_text: 'Подтвердите новый пароль'
            password: True
            multiline: False

        Button:
            text: 'Сохранить'
            on_release:
                root.save_new_password()

        Button:
            text: 'Отмена'
            on_release:
                app.root.current = 'home'