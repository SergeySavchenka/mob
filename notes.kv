<NotesScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: 'Ваши заметки'
            font_size: 24

        ScrollView:
            BoxLayout:
                id: notes_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height

        Button:
            text: 'Добавить заметку'
            on_release:
                root.create_note()
